<%- model_class = Game -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @game.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deck_id) %>:</strong></dt>
  <dd><%= @game.deck_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player2) %>:</strong></dt>
  <dd><%= @game.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player2deck) %>:</strong></dt>
  <dd><%= @game.deck_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player3) %>:</strong></dt>
  <dd><%= @game.player3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player3deck) %>:</strong></dt>
  <dd><%= @game.player3deck %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player4) %>:</strong></dt>
  <dd><%= @game.player4 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player4deck) %>:</strong></dt>
  <dd><%= @game.player4deck %></dd>
  <dt><strong><%= model_class.human_attribute_name(:winner) %>:</strong></dt>
  <dd><%= @game.winner %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              games_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_game_path(@game), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              game_path(@game),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
